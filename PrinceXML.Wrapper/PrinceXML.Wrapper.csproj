    <RootNamespace>PrinceXML.Wrapper</RootNamespace>

    <PackageId>PrinceXMLWrapper</PackageId>
    <RepositoryUrl>https://github.com/yeslogic/prince-csharp-wrapper</RepositoryUrl>

    <Title>Prince C# Wrapper</Title>
    <Description>A C# wrapper for Prince.</Description>
    <Product>PrinceXML.Wrapper</Product>
    <Version>1.0.0</Version>
    <Company>YesLogic Pty. Ltd.</Company>
